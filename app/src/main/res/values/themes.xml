<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPokemonApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/black_primary</item>
        <item name="colorOnPrimary">@color/white_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_success</item>
        <item name="colorSecondaryVariant">@color/black_primary</item>
        <item name="colorOnSecondary">@color/white_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyPokemonApp.NoActionBar"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>
</resources>